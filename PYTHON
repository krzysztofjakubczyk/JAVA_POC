import cv2 as cv
import imutils as imutils
import numpy as np

def rozpoznaj_kolor(h, s, v):
    if 0 <= h < 10 and s > 50 and v > 50:
        return "czerwony"
    elif 160 <= h < 179 and s > 50 and v > 50:
        return "czerwony"
    elif 278 <= h < 390 and s > 50 and v > 50:
        return "czerwony"
    elif 10 <= h < 20 and s > 50 and v > 50:
        return "pomaranczowy"
    elif 45 <= h < 75 and s > 50 and v > 50:
        return "zielony"
    elif 85 <= h < 135 and s > 50 and v > 50:
        return "niebieski"
    elif 155 <= h < 160 and s > 50 and v > 50:
        return "niebieski"
    elif 180 <= h < 200 and s > 50 and v > 50:
        return "niebieski"
    elif 135 <= h < 145 and s > 50 and v > 50:
        return "fioletowy"
    elif 146 <= h < 155 and s > 50 and v > 50:
        return "rozowy"
    elif 0<h<=1:
        return "bialy"
    elif h == 0:
        return "czarny"
    else:
        return "inny"

im = cv.imread('test.png')
imgray = cv.cvtColor(im, cv.COLOR_BGR2GRAY)
obraz_hsv = cv.cvtColor(im, cv.COLOR_BGR2HSV)
ret, thresh = cv.threshold(imgray, 127, 255, 0)
contours, hierarchy = cv.findContours(thresh, cv.RETR_TREE, cv.CHAIN_APPROX_SIMPLE)
zmienna = 0

for cnt in contours:
    if (zmienna == 0):
        zmienna+=1
        continue
    x,y,w,h = cv.boundingRect(cnt)
    M = cv.moments(cnt)
    if M['m00'] != 0.0:
        x = int(M['m10'] / M['m00'])
        y = int(M['m01'] / M['m00'])
    wartosci_v = obraz_hsv[y, x, 2]
    wartosci_s = obraz_hsv[y, x, 1]
    wartosci_h = obraz_hsv[y, x, 0]
    # wartosci_v2 = imhsv[y+1, x+1, 2]
    # wartosci_s2 = imhsv[y+1, x+1, 1]
    # wartosci_h2 = imhsv[y+1, x+1, 0]
    # wartosci_v3 = imhsv[y+1, x, 2]
    # wartosci_s3 = imhsv[y+1, x, 1]
    # wartosci_h3 = imhsv[y+1, x, 0]
    # wartosci_v4 = imhsv[y, x+1, 2]
    # wartosci_s4 = imhsv[y, x+1, 1]
    # wartosci_h4 = imhsv[y, x+1, 0]
    kolor = rozpoznaj_kolor(wartosci_h, wartosci_s, wartosci_v)
    approx = cv.approxPolyDP(cnt, 0.01 * cv.arcLength(cnt, True), True)
    if len(approx) == 4:
        cv.putText(im, 'kwadrat ' + str(kolor), (x-100,y), cv.FONT_HERSHEY_SIMPLEX, 1, (0,255,0), 1, cv.LINE_AA)
    elif len(approx) == 3:
        cv.putText(im, 'trojkat ' + str(kolor), (x-100,y), cv.FONT_HERSHEY_SIMPLEX, 1, (0,0,0), 1, cv.LINE_AA)
    else:
        cv.putText(im, 'kolo ' + str(kolor), (x-100, y), cv.FONT_HERSHEY_SIMPLEX, 1, (0, 0, 0), 1, cv.LINE_AA)

cv.imshow("Pierwszy program w pythonie", im)
cv.waitKey(0)
